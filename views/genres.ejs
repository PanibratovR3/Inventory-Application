<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="/style.css" />
        <title>Genres</title>
    </head>
    <body>
        <%- include("subviews/header") %>
        <div class="main">
            <%- include("subviews/navigation") %>
            <div>
                <div class="subheader"><%= title %></div>
                <div class="add-container">
                    <a href="/genres/create">Add new genre</a>
                </div>
                <ul>
                    <% if (locals.errors) { %>
                        <% errors.forEach((error) => { %>
                            <li class="error"><%= error.msg %></li>
                        <% }); %>
                    <% }; %>                    
                </ul>
                <table>
                    <tr>
                        <th>Name</th>
                    </tr>
                    <% if (locals.genres) { %>
                        <% genres.forEach((genre) => { %>
                            <tr>
                                <td>
                                    <a href="/genres/<%= genre.id %>/update">
                                        <%= genre.name %>
                                    </a>
                                </td>
                                <td>
                                    <form action="/genres/<%= genre.id %>/delete" method="POST">
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete?');" class="delete-button">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% }; %>
                </table>
            </div>
        </div>
    </body>
</html>