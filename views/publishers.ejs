<!DOCTYPE html>
<html>
    <head></head>
    <body>
        <h1><%= title %></h1>
        <a href="/publishers/create">Add new publisher</a>
        <table>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
            <% if (locals.publishers) {%>
                <% publishers.forEach((publisher) => { %>
                    <tr>
                        <td><%= publisher.id %></td>
                        <td>
                            <a href="/publishers/<%= publisher.id %>/update">
                                <%= publisher.name %>
                            </a>
                        </td>
                        <td>
                            <form action="/publishers/<%= publisher.id %>/delete" method="POST">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% }; %>
        </table>
    </body>
</html>