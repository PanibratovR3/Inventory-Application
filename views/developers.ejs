<!DOCTYPE html>
<html>
    <head></head>
    <body>
        <h1><%= title %></h1>
        <a href="/developers/create">Add new developer</a>
        <table>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
            <% if (locals.developers) {%>
                <% developers.forEach((developer) => { %>
                    <tr>
                        <td><%= developer.id %></td>
                        <td><a href="/developers/<%= developer.id %>/update"><%= developer.name %></a></td>
                        <td>
                            <form action="/developers/<%= developer.id %>/delete" method="POST">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete?')">Delete developer</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } %>
        </table>
    </body>
</html>