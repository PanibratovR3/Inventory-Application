<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/style.css" />
    </head>
    <body>
        <%- include("subviews/header") %>
        <div class="main">
            <%- include("subviews/navigation") %>
            <div>
                <div class="subheader"><%= title %></div>
                <div class="add-container">
                    <a href="/developers/create">Add new developer</a>
                </div>
                <ul>
                    <% if (locals.errors) { %>
                        <% errors.forEach((error) => { %>
                            <li class="error"><%= error.msg %></li>
                        <% }); %>
                    <% }; %>
                </ul>
                <table>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                    <% if (locals.developers) {%>
                        <% developers.forEach((developer) => { %>
                            <tr>
                                <td><%= developer.id %></td>
                                <td><a href="/developers/<%= developer.id %>/update"><%= developer.name %></a></td>
                                <td>
                                    <form action="/developers/<%= developer.id %>/delete" method="POST">
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete?')" class="delete-button">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </table>
            </div>
        </div>
    </body>
</html>