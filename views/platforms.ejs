<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/style.css" />
    </head>
    <body>
        <%- include("subviews/header") %>
        <div class="main">
            <%- include("subviews/navigation") %>
            <div>
                <div class="subheader"><%= title %></div>
                <div class="add-container">
                    <a href="/platforms/create">Add new platform</a>
                </div>
                <ul>
                    <% if (locals.errors) { %>
                        <% errors.forEach((error) => { %>
                            <li class="error"><%= error.msg %></li>
                        <% }); %>
                    <% }; %>
                </ul>
                <table>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                    <% if (locals.platforms) { %>
                        <% platforms.forEach((platform) => { %>
                            <tr>
                                <td><%= platform.id %></td>
                                <td>
                                    <a href="/platforms/<%= platform.id %>/update">
                                        <%= platform.name %>
                                    </a>
                                </td>
                                <td>
                                    <form action="/platforms/<%= platform.id %>/delete" method="POST">
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete?')" class="delete-button">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% }; %>
                </table>
            </div>
        </div>
    </body>
</html>