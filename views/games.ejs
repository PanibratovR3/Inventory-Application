<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="/style.css">
        <title>Games</title>
    </head>
    <body>
        <%- include("subviews/header") %>
        <div class="main">
            <%- include("subviews/navigation") %>
            <div class="menu">
                <div class="subheader"><%= title %></div>
                <div class="add-container">
                    <a href="/create">Add new game</a>
                </div>                
                <div>
                    <form action="/search" method="GET">
                        <div class="search-form-row">
                            <label for="name">Name of game:</label>
                            <input type="text" id="name" name="searchName" />
                            <label for="developer">Developer:</label>
                            <select name="searchDeveloper" id="developer">
                                <option value="">Empty</option>
                                <% if (locals.developers) { %>
                                    <% developers.forEach((developer) => { %>
                                        <option value="<%= developer.id %>"><%= developer.name %></option>
                                    <% }); %>
                                <% }; %>
                            </select>
                            <label for="genre">Genre:</label>
                            <select name="searchGenre" id="genre">
                                <option value="">Empty</option>
                                <% if (locals.genres) { %>
                                    <% genres.forEach((genre) => { %>
                                        <option value="<%= genre.id %>"><%= genre.name %></option>
                                    <% }); %>
                                <% }; %>
                            </select>
                        </div>
                        <div class="search-form-row">
                            <label for="publisher">Publisher:</label>
                                <select name="searchPublisher" id="publisher">
                                    <option value="">Empty</option>
                                    <% if (locals.publishers) { %>
                                        <% publishers.forEach((publisher) => { %>
                                            <option value="<%= publisher.id %>"><%= publisher.name %></option>
                                        <% }); %>
                                    <% }; %>
                                </select>
                                <label for="platform">Platform:</label>
                                <select name="searchPlatform" id="platform">
                                    <option value="">Empty</option>
                                    <% if (locals.platforms) { %>
                                        <% platforms.forEach((platform) => { %>
                                            <option value="<%= platform.id %>"><%= platform.name %></option>
                                        <% }); %>
                                    <% } %>
                                </select>
                        </div>
                        <div class="search-form-row">
                            <button type="submit" class="search-button">Search games</button>
                        </div>
                    </form>
                </div>
                <table>
                    <tr>
                        <th>Title</th>
                        <th>Developer</th>
                        <th>Genre</th>
                        <th>Publisher</th>
                        <th>Platform</th>
                        <th>Date of release</th>
                    </tr>
                    <% if (locals.games) { %>
                        <% games.forEach((game) => { %>
                            <tr>
                                <td>
                                    <a href="/<%= game.id %>/update">
                                        <%= game.title %>
                                    </a>
                                </td>
                                <td><%= game.developername %></td>
                                <td><%= game.genrename %></td>
                                <td><%= game.publishername %></td>
                                <td><%= game.platformname %></td>
                                <td><%= game.dateofrelease.toLocaleDateString('ja-JP') %></td>
                                <td>
                                    <form action="/<%= game.id %>/delete" method="POST">
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete?')" class="delete-button">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% }; %>
                </table>
            </div>
        </div>
    </body>
</html>